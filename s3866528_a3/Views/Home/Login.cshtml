@model Login

@{
    ViewData["Title"] = "Login";
}

<div class="p-5">

    <h1 class="display-4 text-center">Login</h1>

    <form asp-action="Login" asp-controller="Home" class="col-md-6 g-5 mx-auto">
        <div class="form-group row mt-3">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group row mt-3">
            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter Email" data-val="true"
                   data-val-required="The Email field is required." />
        </div>
        <div class="form-group row mt-3 mb-4">
            <label for="Password" class="control-label">Password</label>
            <input id="Password" name="password" type="password" placeholder="Enter Password" class="form-control"
                   data-val="true" data-val-required="The Password field is required." />
        </div>

        <div class="form-group row mt-3">
            <input type="submit" value="Login" class="btn btn-primary btn-block col-8 mx-auto" />
        </div>
        <p class="text-center my-3">OR</p>
        <div class="form-group row mt-3">
            <a class="btn btn-primary btn-block col-8 mx-auto" asp-controller="Home" asp-action="Register">Register</a>
        </div>
    </form>

</div>
